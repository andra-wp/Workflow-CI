name: diabetes-hyperparameter

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      dataset:
        type: str
        default: diabetes_preprocessing.csv
      target_col:
        type: str
        default: Outcome
      test_size:
        type: float
        default: 0.2
      cv:
        type: int
        default: 5
      param_grid:
        type: str
        default: >
          {"n_estimators":[50,100,200],
           "max_depth":[null,5,10],
           "min_samples_split":[2,5],
           "min_samples_leaf":[1,2]}

    command: >
      python modelling.py
      --dataset {dataset}
      --target_col {target_col}
      --test_size {test_size}
      --cv {cv}
      --param_grid {param_grid}
